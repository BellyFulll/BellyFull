<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/overlay_bg"
        app:cardCornerRadius="8dp"
        android:id="@+id/cardKcalMax">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="1698 kcal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/tvCardKcalConsumed"
            android:translationX="230dp"
            android:textColor="@color/pink1"
            android:fontFamily="@font/a_bee_zee_regular"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:text="Consumed"
            android:textSize="18sp"
            android:id="@+id/tvCardConsumed"
            android:translationX="230dp"
            android:translationY="25dp"
            android:textColor="@color/pink1"
            android:fontFamily="@font/a_bee_zee_regular"/>
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="302 kcal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/tvCardKcalRemain"
            android:translationX="230dp"
               android:translationY="50dp"
            android:textColor="@color/pink1"
            android:fontFamily="@font/a_bee_zee_regular"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:text="Remaining"
            android:textSize="18sp"
            android:id="@+id/tvCardRemain"
            android:translationX="230dp"
            android:translationY="72dp"
            android:textColor="@color/pink1"
            android:fontFamily="@font/a_bee_zee_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Quality"
            android:textSize="18sp"
            android:id="@+id/tvCardQuality"
            android:translationX="77dp"
            android:translationY="47dp"
            android:textColor="@color/pink1"
            android:fontFamily="@font/a_bee_zee_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="80.4%"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/tvCardQualityPercent"
            android:translationX="62dp"
            android:translationY="65dp"
            android:textColor="@color/pink1"
            android:fontFamily="@font/a_bee_zee_regular"/>


    <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:indeterminateDrawable="@drawable/circular_progress"
            android:indeterminate="true"
            android:layout_marginLeft="30dp"
            />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/img_mom_kcal"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="160dp"/>
</androidx.cardview.widget.CardView>

