<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mom_visual_bg"
    tools:context=".modules.visualisation.Fragments.MomVisualisationFragment">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/overlay_bg"
            android:paddingVertical="15dp"
            android:text="Daily"
            android:textColor="@color/pink2"
            android:textSize="20dp"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWeekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/overlay_bg"
            android:paddingVertical="15dp"
            android:text="Weekly"
            android:textColor="@color/pink2"
            android:textSize="20dp"
            app:cornerRadius="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMonthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/overlay_bg"
            android:paddingVertical="15dp"
            android:text="Monthly"
            android:textColor="@color/pink2"
            android:textSize="20dp"
            app:cornerRadius="15dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="475dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1800dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBig"
                android:layout_width="381dp"
                android:layout_height="212dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/overlay_bg"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/sleepanalysis_text"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/a_bee_zee_regular"
                    android:text="Sleep Analysis"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/pink1"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="208dp"
                    android:layout_height="166dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/sleepquality_progresscircle" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="347dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/sleep_graphic" />

                <TextView
                    android:id="@+id/sleep_duration"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/a_bee_zee_regular"
                    android:text="7h 30m"
                    android:textAlignment="center"
                    android:textColor="@color/pink1"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="205dp"
                    android:layout_marginTop="90dp"
                    android:fontFamily="@font/a_bee_zee_regular"
                    android:text="Sleep Duration"
                    android:textColor="@color/pink1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="195dp"
                    android:layout_marginTop="110dp"
                    android:fontFamily="@font/a_bee_zee_regular"
                    android:text="Slightly better than yesterday"
                    android:textColor="@color/pink1"
                    android:textSize="9sp" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/overlay_bg"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/tvCardView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Placeholder text for card 2"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/overlay_bg"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/tvCardView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Placeholder text for card 3"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/overlay_bg"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/tvCardView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Placeholder text for card 4"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/overlay_bg"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/tvCardView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Placeholder text for card 5"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="39dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>