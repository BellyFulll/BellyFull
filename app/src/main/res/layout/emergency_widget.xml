<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Widget.BellyFull.AppWidget.Container"
        android:theme="@style/Theme.BellyFull.AppWidgetContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            style="@style/Widget.BellyFull.AppWidget.InnerView"
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:text="@string/appwidget_text"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:contentDescription="@string/appwidget_text"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/pink3"
            android:layout_centerInParent="true" />

    <Button
            android:id="@+id/widget_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_text"
            android:layout_marginTop="-55dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/widget_action"
            android:textColor="@color/white"
            android:backgroundTint="@color/pink1"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:layout_centerInParent="true" />

</RelativeLayout>