<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pink2">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mapView"
            class="com.google.android.gms.maps.SupportMapFragment"
            tools:context=".modules.EmergencyAndHelp.Fragments.EmergencyActivity"
            android:layout_width="331dp"
            android:layout_height="245dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp" />

    <!--  mNameTextView, mAddressTextView and mPhoneNumberTextView from EmergencyActivity -->

    <TextView
            android:layout_width="130dp"
            android:layout_height="410dp"
            android:id="@+id/mNameTextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/mapView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

    <TextView
            android:layout_width="131dp"
            android:layout_height="412dp"
            android:id="@+id/mAddressTextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/mapView"
            app:layout_constraintStart_toEndOf="@+id/mNameTextView"
            android:layout_marginStart="4dp" />

    <TextView
            android:layout_width="140dp"
            android:layout_height="410dp"
            android:id="@+id/mPhoneTextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/mapView"
            app:layout_constraintStart_toEndOf="@+id/mAddressTextView"
            android:layout_marginStart="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>